<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="4"
    android:padding="5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/BtnMainNews"
        android:background="@drawable/button_news"
        android:elevation="2dp"
        android:padding="5dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/news_label"
            android:layout_marginStart="20dp"
            android:layout_marginTop="25dp"
            android:textColor="#f2cf74"
            android:textSize="15sp" />

        <TextView
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Будьте в курсе последних новостей"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:textColor="#cecece"
            android:textSize="14sp"
            android:typeface="normal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/BtnMainCal"
        android:background="@drawable/button_calendar"
        android:elevation="2dp"
        android:padding="5dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/calendar_label"
            android:layout_marginStart="20dp"
            android:layout_marginTop="25dp"
            android:textColor="#f2cf74"
            android:textSize="15sp" />

        <TextView
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Следите за событиями в мире православия"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:textColor="#cecece"
            android:textSize="14sp"
            android:typeface="normal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/BtnMainWord"
        android:background="@drawable/button_word"
        android:elevation="2dp"
        android:padding="5dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/word_label"
            android:layout_marginStart="20dp"
            android:layout_marginTop="25dp"
            android:textColor="#f2cf74"
            android:textSize="15sp" />

        <TextView
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Черпайте мудрость из слов святого писания"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:textColor="#cecece"
            android:textSize="14sp"
            android:typeface="normal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/BtnMainDonat"
        android:background="@drawable/button_blagotvor"
        android:elevation="2dp"
        android:padding="5dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/donat_label"
            android:layout_marginStart="20dp"
            android:layout_marginTop="25dp"
            android:textColor="#f2cf74"
            android:textSize="15sp" />

        <TextView
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Делайте богоугодные дела, как завещал Господь"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:textColor="#cecece"
            android:textSize="14sp"
            android:typeface="normal" />
    </LinearLayout>
</LinearLayout>
